<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MangaMotion" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/malachite</item>
        <item name="colorSecondary">@color/vividCerise</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/darker</item>
        <item name="colorOnSurface">@color/americanSilver</item>
        <item name="colorOutline">@color/americanSilver</item>
    </style>
    <style name="Theme.MangaMotion" parent="Base.Theme.MangaMotion" />

    <style name="DefaultTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/outlined_text_input_stroke</item>
        <item name="boxStrokeWidth">@dimen/_1mdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_15mdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_15mdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_15mdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_15mdp</item>
        <item name="android:layout_marginTop">@dimen/_10mdp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="boxStrokeErrorColor">@color/tart_orange</item>
        <item name="startIconTint">?attr/colorOnSurface</item>
        <item name="android:paddingStart">@dimen/_5mdp</item>
    </style>

    <style name="LoadingButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="background">@drawable/rounded_bg</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="cornerRadius">@dimen/_15mdp</item>
    </style>
    <!--Rounded ImageView-->
    <style name="RoundedImageOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10mdp</item>
    </style>
</resources>